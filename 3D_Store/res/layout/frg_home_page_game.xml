<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:orientation="vertical" >

    <com.runmit.sweedee.view.TriangleLineView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/triangleline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:lineColor="@color/game_cut_line_color"
        app:lineHeight="1dp"
        app:triangleHeight="9dp"
        app:triangleWidth="16dp" />

    <com.runmit.sweedee.view.PagerSlidingTabStrip
        android:id="@+id/game_detail_tabs"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_width="match_parent"
        android:layout_height="44dip" />

    <android.support.v4.view.ViewPager
        android:id="@+id/detail_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>