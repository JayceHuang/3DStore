<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back_ground"
    android:orientation="vertical"
    android:paddingLeft="9dip"
    android:paddingRight="9dip" >

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/list_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/cash_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seletor_setting_item"
            android:minHeight="48dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageView_user_icon_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dip"
                android:src="@drawable/user_icon_money" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:paddingRight="15dip"
                android:src="@drawable/list_enter" />

            <TextView
                android:id="@+id/textView_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/imageView_user_icon_money"
                android:text="@string/cash_pay"
                android:textColor="#040910"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/cut_line_color" />

        <RelativeLayout
            android:id="@+id/wallet_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seletor_setting_item"
            android:minHeight="48dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:paddingRight="15dip"
                android:src="@drawable/list_enter" />

            <ImageView
                android:id="@+id/imageView_user_icon_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dip"
                android:src="@drawable/user_icon_wallet" />

            <TextView
                android:id="@+id/textView_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/imageView_user_icon_wallet"
                android:text="@string/wallet_pay"
                android:textColor="#040910"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_myMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/arrow_right"
                android:text="@string/wallet_pay"
                android:textColor="#040910"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/cut_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/cut_line_color" />

        <RelativeLayout
            android:id="@+id/virtualmoney_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seletor_setting_item"
            android:minHeight="48dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/arrow_right_virtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:paddingRight="15dip"
                android:src="@drawable/list_enter" />

            <ImageView
                android:id="@+id/imageView_user_icon_virtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/arrow_right_virtual"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dip"
                android:src="@drawable/ic_virtual_money_logo" />

            <TextView
                android:id="@+id/textView_virtual_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/imageView_user_icon_virtual"
                android:text="@string/virtual_money_pay"
                android:textColor="#040910"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_virtual_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/arrow_right_virtual"
                android:text="500" 
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:textColor="@color/red_btn_normal" />

            <TextView
                android:id="@+id/textView_virtual_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/textView_virtual_money"
                android:text="@string/remain_virtual_money_pay"
                android:textColor="@color/message_text_color"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="3dip"
            android:layout_height="15dip"
            android:layout_marginTop="3dip"
            android:background="@color/message_text_color"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/title_play_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dip"
            android:text="@string/pay_toast"
            android:textColor="@color/message_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_pay_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:lineSpacingExtra="5dip"
        android:text="@string/pay_agreement"
        android:textColor="#666666"
        android:textSize="16sp" />

</LinearLayout>