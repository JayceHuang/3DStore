<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="159dp"
            android:layout_height="86dp" >

            <ImageView
                android:id="@+id/item_moviecatalog_img_logo"
                android:layout_width="159dp"
                android:layout_height="86dp"
                android:scaleType="fitXY"
                android:src="@drawable/about_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/movie_time_overlay"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/item_moviecatalog_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="TextView"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_moviecatalog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="Large Text"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="none" />
    </LinearLayout>
    
    <View
        android:layout_width="15dp"
        android:layout_height="match_parent" >
</View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="159dp"
            android:layout_height="86dp" >

            <ImageView
                android:id="@+id/item_moviecatalog_img_logo1"
                android:layout_width="159dp"
                android:layout_height="86dp"
                android:scaleType="fitXY"
                android:src="@drawable/about_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/movie_time_overlay"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/item_moviecatalog_time_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="TextView"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_moviecatalog_tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="Large Text"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="none"
             /> />
    </LinearLayout>

</LinearLayout>
