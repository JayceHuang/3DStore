<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_resource_list_item_child_id"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/seletor_setting_item" >

    <ImageView
        android:id="@+id/iv_search_result_list_item_poster"
        android:layout_width="57dip"
        android:layout_height="57dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dip"
        android:src="@drawable/game_detail_icon_h324" />

    <RelativeLayout
        android:id="@+id/il_search_result_list_item_text_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_search_result_list_item_poster"
        android:layout_alignTop="@id/iv_search_result_list_item_poster">
	
        <TextView
            android:id="@+id/tv_search_result_list_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/app_name"
            android:gravity="top"
            android:textColor="#000"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_search_result_list_item_title"
            android:singleLine="true"
            android:text="@string/appdetail_size_text"
            android:gravity="top"
            android:textColor="#666666"
            android:layout_marginTop="5dp"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_search_result_list_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/size_tv"
            android:layout_alignTop="@+id/size_tv"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size_tv"
            android:singleLine="true"
            android:text="@string/appdetail_filetype_text"
            android:gravity="top"
            android:textColor="#666666"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_search_result_list_item_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/type_tv"
            android:layout_alignTop="@+id/type_tv"
            android:maxLines="1"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_search_result_list_item_downloads"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_search_result_list_item_size"
            android:layout_alignTop="@+id/tv_search_result_list_item_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="#666666"
            android:layout_marginLeft="16dp"
            android:textSize="14dp" />
    </RelativeLayout>
    <View
        android:id="@+id/cut_line_layout"
        android:layout_below="@+id/il_search_result_list_item_text_container"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cut_line_color"
        android:layout_alignLeft="@+id/il_search_result_list_item_text_container"
        android:layout_marginTop="13dp"/>

</RelativeLayout>