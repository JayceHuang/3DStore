<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	   <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="9dip"
	       android:layout_marginRight="9dip"
	       android:layout_marginTop="15dip"
	       android:background="@drawable/list_bg"
	       android:orientation="vertical">
	       
	       <RelativeLayout
	           android:id="@+id/select_location_layout"
	           android:layout_width="match_parent"
	           android:layout_height="48dip"
	           android:background="@drawable/bg_setting_ltem_selector"
	           android:gravity="center_vertical" >
	
	           <TextView
	               android:id="@+id/tv_select_location"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_alignParentLeft="true"
	               android:layout_alignParentTop="true"
	               android:layout_marginLeft="9dip"
	               android:text="@string/phone_regist_select_location"
	               android:textColor="@color/game_tabs_text_color"
	               android:textSize="16sp" />
	
	           <TextView
	               android:id="@+id/textviewLocation"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_gravity="center"
	               android:layout_marginRight="10dip"
	               android:layout_toRightOf="@+id/tv_select_location"
	               android:textColor="@color/game_tabs_text_color"
	               android:textSize="16sp" />
	
	           <ImageView
	               android:id="@+id/imageView"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_alignParentRight="true"
	               android:layout_marginRight="9dp"
	               android:src="@drawable/drop_down_triangle_selector" />
	       </RelativeLayout>
	       
	       <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/line_black"
                android:orientation="vertical" />
	       
	       <RelativeLayout
	           android:layout_width="match_parent"
	           android:layout_height="48dip"
	           android:background="@drawable/bg_setting_ltem_selector"
	           android:gravity="center_vertical" >
		       <TextView
	                android:id="@+id/phone_countrycode"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dip"
	                android:text="@string/login_account"
	                android:textColor="@color/game_tabs_text_color"
	                android:textSize="16sp" />
			   <EditText
			        android:id="@+id/phone_num"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@+id/phone_countrycode"
			        android:background="@null"
			        android:hint="@string/phone"
			        android:inputType="phone"
			        android:text=""
			        android:paddingLeft="5dip"
			        android:paddingRight="27dip"
			        android:singleLine="true"
			        android:textColor="#333333"
			        android:textColorHint="#bbbbbb"
			        android:textSize="14sp" 
			        android:minHeight="48dip"/>
			   <requestFocus />
		   </RelativeLayout>
	   </LinearLayout>
        
	   <Button
	        android:id="@+id/phonenum_next"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="9dip"
	        android:layout_marginRight="9dip"
	        android:layout_marginTop="30dip"
	        android:background="@drawable/button_green_selector"
	        android:text="@string/get_identifying_code"
	        android:textColor="@color/white"
	        android:textSize="16sp" />
	
</LinearLayout>
