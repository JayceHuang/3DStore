<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_back_ground"
    android:orientation="vertical"
    android:paddingLeft="9dip"
    android:paddingRight="9dip" >

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="3dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:background="@color/title_color"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:gravity="center_vertical"
            android:text="@string/rechare_amount"
            android:textColor="@color/message_text_color"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="fill_parent"
        android:layout_height="96dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/list_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_money1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_button_focus"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10元"
                android:textColor="@color/pay_money_select"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/cut_line_color" />

        <LinearLayout
            android:id="@+id/layout_money2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30元"
                android:textColor="@color/title_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/cut_line_color" />

        <LinearLayout
            android:id="@+id/layout_money3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_money3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50元"
                android:textColor="@color/title_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/cut_line_color" />

        <LinearLayout
            android:id="@+id/layout_money4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_money4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元"
                android:textColor="@color/title_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_method_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="3dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:background="@color/title_color"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/payway_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:text="@string/pay_method"
            android:textColor="@color/message_text_color"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_stype_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/list_bg"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/submit_order"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/button_green_selector"
        android:gravity="center"
        android:text="@string/pay_commit"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>