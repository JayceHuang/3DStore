<com.runmit.sweedee.view.WeightedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/delFileSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_delete_task"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:checked="true" />

    <CheckBox
        android:id="@+id/isdeletelocalfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/taskmanager_deletelocalfile"
        android:textColor="@color/message_text_color"
        android:textSize="14sp"
        android:button="@drawable/single_select_toggle_button_selector"
        android:checked="true"
        android:visibility="gone" />

</com.runmit.sweedee.view.WeightedLinearLayout>
