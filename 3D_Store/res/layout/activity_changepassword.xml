<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/content_framelayout" >

    <LinearLayout
        android:id="@+id/enter_oldpassword_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:text="@string/please_end_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/message_text_color"
            android:layout_marginTop="47dp" />

        <com.runmit.sweedee.view.gridpasswordview.GridPasswordView
            android:id="@+id/enter_oldpassword_gpv"
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:itemLineColor="@color/passowrd_line_cut"
            app:lineWidth="1dp" />
    </LinearLayout>
</FrameLayout>